<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <Button
        android:id="@+id/btn_login_choice_direct"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/app_login_choice_bottomheight"
        android:layout_marginLeft="@dimen/app_login_choice_marRight"
        android:layout_marginRight="@dimen/app_login_choice_marleft"
        android:background="@drawable/edittext_circle_shape"
        android:text="@string/login_direct" />

    <Button
        android:id="@+id/btn_login_choice_login"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/app_login_choice_bottomheight"
        android:layout_marginLeft="@dimen/app_login_choice_marleft"
        android:layout_marginRight="@dimen/app_login_choice_marRight"
        android:background="@drawable/edittext_circle_shape"
        android:text="@string/login" />

</RelativeLayout>