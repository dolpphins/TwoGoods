<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/nearby_select_city_position_background"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/ll_nearby_select_city_replace_top"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/nearby_select_city_marginleft"
        android:layout_marginRight="@dimen/nearby_select_city_marginright"
        android:layout_marginTop="@dimen/nearby_select_city_margintop"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:orientation="horizontal" >

        <com.lym.twogoods.nearby.ui.SelectCityClearEditText
            android:id="@+id/et_nearby_select_city_replace_input"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/edittext_circle_shape"
            android:drawableLeft="@drawable/nearby_select_city_edittext_clear"
            android:hint="@string/nearby_select_city_search"
            android:singleLine="true" />

        <Button
            android:id="@+id/btn_nearby_select_city_replace_input_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/transparent"
            android:text="@string/cancel"
            android:textColor="@color/nearby_select_city_position_cancel_text"
            android:visibility="gone" />
    </LinearLayout>

    <ListView
        android:id="@+id/lv_nearby_select_city_replace_search_result"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none"
        android:visibility="gone" >
    </ListView>

    <LinearLayout android:id="@+id/ll_nearby_select_city_replace_hidelayout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/nearby_select_city_marginleft"
        android:layout_marginRight="@dimen/nearby_select_city_marginright"
        android:layout_marginTop="@dimen/nearby_select_city_margintop"
        android:text="@string/hot_city"
        android:textColor="@color/nearby_select_city_position_hotcity_textcolor"
        android:textSize="@dimen/nearby_select_city_hot_city_textsize" />

    <LinearLayout
        android:id="@+id/ll_nearby_select_city_replace_dingwei"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/nearby_select_city_marginleft"
        android:layout_marginRight="@dimen/nearby_select_city_marginright"
        android:background="#FFFFFF"
        android:gravity="center_horizontal|center_vertical"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/nearby_select_city_dingwei_paddingBottom"
        android:paddingTop="@dimen/nearby_select_city_dingwei_paddingTop" >

        <ImageView
            android:id="@+id/iv_nearby_select_city_replace_dingwei_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/nearby_select_city_dingwei" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/nearby_select_city_dingwei"
            android:textColor="@color/nearby_select_city_position_dingwei_textcolor"
            android:textSize="@dimen/nearby_select_city_hot_city_textsize" />
    </LinearLayout>

    <GridView
        android:id="@+id/gv_nearby_select_city_replace_hot_city"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/nearby_select_city_marginleft"
        android:layout_marginRight="@dimen/nearby_select_city_marginright"
        android:layout_marginTop="@dimen/nearby_select_city_hot_city_gridview_marginTop"
        android:scrollbars="none" >
    </GridView>

    </LinearLayout>
</LinearLayout>