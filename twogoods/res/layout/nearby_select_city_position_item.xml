<?xml version="1.0" encoding="utf-8"?>
<!--
	城市列表中listview的item样式
	author:龙宇文
-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="vertical" >
    

    <TextView android:id="@+id/tv_select_city_position_letter"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@color/nearby_select_city_position_letter_background"
        android:textColor="@color/nearby_select_city_position_letter"
        android:layout_weight="1"
        android:paddingLeft="@dimen/nearby_select_city_position_letter_top_letter_bottom"
        android:paddingTop="@dimen/nearby_select_city_position_letter_top_letter_bottom"
        android:paddingBottom="@dimen/nearby_select_city_position_letter_top_letter_bottom"/>
    <TextView 
        android:id="@+id/tv_select_city_position_name"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:textColor="@color/nearby_select_city_position_name"
        android:layout_weight="1"
        android:paddingLeft="@dimen/nearby_select_city_position_name_left"
        android:paddingTop="@dimen/nearby_select_city_position_name_top_bottom"
        android:paddingBottom="@dimen/nearby_select_city_position_name_top_bottom"/>
</LinearLayout>
