<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape>
            <padding
                android:left="15dip"
                android:bottom="5dip"
                android:right="15dip"
                android:top="5dip"/>
            <corners
                android:radius="1dip"/>
            <stroke
                android:width="1dip"
                android:color="#cccccc"/>
            <solid
                android:color="@color/white"/>
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape>
            <padding
                android:left="15dip"
                android:bottom="5dip"
                android:right="15dip"
                android:top="5dip"/>
            <corners
                android:radius="1dip"/>
            <stroke
                android:width="1dip"
                android:color="#cccccc"/>
            <solid
                android:color="#cccccc"/>
        </shape>
    </item>
</selector>